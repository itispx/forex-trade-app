{
  "display": "Node.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "allowJs": true,
    "noEmit": false,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
